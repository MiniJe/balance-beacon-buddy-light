# Configurație pentru producție - Balance Beacon Buddy

# =============================================================================
# CONFIGURARE BAZA DE DATE AZURE SQL
# =============================================================================
DB_HOST=freshcrm.database.windows.net
DB_PORT=1433
DB_NAME=confirmari-solduri
DB_USER=your-azure-sql-username
DB_PASSWORD=your-azure-sql-password

# =============================================================================
# CONFIGURARE SERVER
# =============================================================================
PORT=5000
NODE_ENV=production

# =============================================================================
# CONFIGURARE SECURITATE JWT
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters

# =============================================================================
# CONFIGURARE EMAIL SMTP
# =============================================================================
EMAIL_HOST=smtp.zoho.eu
EMAIL_PORT=587
EMAIL_USER=confirmarisolduri@ducfarm.ro
EMAIL_PASS=your-email-password

# =============================================================================
# CONFIGURARE FRONTEND
# =============================================================================
VITE_API_URL=http://localhost:5000

# =============================================================================
# CONFIGURARE SECURITATE FIȘIERE PDF
# =============================================================================
PDF_SECURITY_ENABLED=true
PDF_OWNER_PASSWORD=your-pdf-owner-password
PDF_USER_PASSWORD=your-pdf-user-password

# =============================================================================
# CONFIGURARE LOGS ȘI MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined

# =============================================================================
# CONFIGURARE UPLOAD FIȘIERE
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# =============================================================================
# CONFIGURARE CORS (pentru producție)
# =============================================================================
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true
